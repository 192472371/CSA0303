#include <stdio.h>

int main() {
    int n, first = 0, second = 1, next, i;
    int sum = 0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");
    for (i = 1; i <= n; i++) {
        if (i == 1) {
            next = first;
        } else if (i == 2) {
            next = second;
        } else {
            next = first + second;
            first = second;
            second = next;
        }
        printf("%d ", next);
        sum += next;
    }

    printf("\nSum of Fibonacci Series = %d\n", sum);
    return 0;
}
