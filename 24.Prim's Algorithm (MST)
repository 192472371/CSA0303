#include <stdio.h>
#define INF 9999
#define MAX 10

void prim(int G[MAX][MAX], int n) {
    int selected[MAX] = {0};
    int i, j, no_edges = 0, x, y;

    selected[0] = 1;
    printf("Edge : Weight\n");

    while (no_edges < n - 1) {
        int min = INF;
        x = y = 0;

        for (i = 0; i < n; i++)
            if (selected[i])
                for (j = 0; j < n; j++)
                    if (!selected[j] && G[i][j] && G[i][j] < min) {
                        min = G[i][j];
                        x = i;
                        y = j;
                    }

        printf("%d - %d : %d\n", x, y, G[x][y]);
        selected[y] = 1;
        no_edges++;
    }
}

int main() {
    int n, G[MAX][MAX], i, j;
    printf("Enter number of vertices: ");
    scanf("%d", &n);
    printf("Enter adjacency matrix:\n");
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
            scanf("%d", &G[i][j]);
    prim(G, n);
    return 0;
}
